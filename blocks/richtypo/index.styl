// Rich typograhy

// Abbreviations with spacing.
abbr
	letter-spacing: 0.1em
	margin-right: -0.1em

// The best ampersand.
.amp
	font-family: Baskerville, Constantia, Palatino, "Palatino Linotype", "Book Antiqua", serif
	font-style: italic

// Hanging punctuation.
.sbrace
	margin-right: 0.3em
.hbrace
	margin-left: -0.3em
.slaquo
	margin-right: 0.42em
.hlaquo
	margin-left: -0.42em

// Headings with ligatures.
h1, .alpha,
h2, .beta,
h3, .gamma,
h4, .delta,
h5, .epsilion,
h6, .zeta
	enable-ligatures()
