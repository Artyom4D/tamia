// Checkbox and radio button

/* Bones */

.checkbox,
.radiobutton
	&__button
		// For prehistoric browsers
		display: none

	&__text
		display: inline-block

	&__button,
	&__text
		vertical-align: middle

	&__input:checked,
	&__input:not(:checked)
		position: absolute
		opacity: 0

	&__input:checked + &__label &__button,
	&__input:not(:checked) + &__label &__button
		display: inline-block

	&__input:checked + &__label &__button
		position: relative
		&:before
			content: ""
			position: absolute
			line-height: 1


/* Default skin */

blocks_default_skin ?= true
checkbox_default_skin ?= false

if blocks_default_skin or checkbox_default_skin

	.checkbox,
	.radiobutton
		&__button,
		&__text
			line-height: 1.8
			font-size: 16px

		&__input:checked + &__label &__button,
		&__input:not(:checked) + &__label &__button
			width: size = 1em
			height: size
			margin-top: -.15em
			margin-right: .15em
			border: 1px solid #bbb
			border-radius: .2em
			box-shadow: inset 0 1px 2px black(.2)

		&__input:active + &__label &__button
			background: #f4f4f4

	.checkbox
		&__input:checked + &__label &__button
			&:before
				top: -.2em
				left: .05em
				font-size: 1.25em
				color: #444
				content: "✓"

	.radiobutton
		&__input:checked + &__label &__button,
		&__input:not(:checked) + &__label &__button
			border-radius: 50%

		&__input:checked + &__label &__button
			&:before
				top: .19em
				left: .165em
				width: size = .5em
				height: size
				background: #444
				border-radius: 50%

